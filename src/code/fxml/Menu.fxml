           <Button fx:id="resetButton" maxWidth="200.0" mnemonicParsing="false" onAction="#handleResetButton" prefHeight="40.0" text="Reset" />
       </VBox>
   </center>
   <top>
      <Label text="English Project" BorderPane.alignment="CENTER">
         <font>
            <Font size="60.0" />
         </font>
         <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Label>
   </top>
   <bottom>
      <Label fx:id="nameLabel" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
